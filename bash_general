export TERM=xterm-256color
export GREP_COLOR=42

if $(which termux > /dev/null 2>&1 ); then 
	alias display='termux-share -d'
	alias xclip='termux-clipboard-set'
fi

alias ls='ls -h --color'
alias l='ls'
alias ll='ls -l'
alias lg='ls | grep'
alias llg='ll | grep'
alias la='ls -a'
alias lla='ll -a'
alias llag='lla | grep'

alias 🏡='cd'
alias 🤖='adb'
alias 🌍='google-chrome&'
alias 🙋='echo '\''I am so happy'\'' | big_rainbow'

alias xclip="xclip -selection c"

function maze() {
	count=$1
	shift

	m=(╱ ╲)
	while true; do 
		echo -ne "${m[RANDOM % 2]}"; 
	done
}

function amaze() {
	x=$1;
	if [ ! $x ]; then
		x=40;
	fi; 
	maze | head -c$((x*x/2*4)) | grep -o ".\{$((x))\}"
}
