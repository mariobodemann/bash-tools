function my_ip() {
	ip addr | grep eth0 | grep -o '[0-9]\+\.[0-9]\+\.[0-9]\+\.[0-9]\+' | head -n 1
}

export TERM=xterm-256color
export GREP_COLOR=42

alias grep='grep --colour=auto'
alias ls='ls -h --color'
alias l='ls'
alias ll='ls -l'
alias lg='ls | grep'
alias llg='ll | grep'
alias la='ls -a'
alias lla='ll -a'
alias llag='lla | grep'

alias xclip="xclip -selection c"

