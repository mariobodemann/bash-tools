#!/bin/env bash

FRAKTUR_LIGHT_CAPITAL="ğ”„ğ”…â„­ğ”‡ğ”ˆğ”‰ğ”Šâ„Œâ„‘ğ”ğ”ğ”ğ”ğ”‘ğ”’ğ”“ğ””â„œğ”–ğ”—ğ”˜ğ”™ğ”šğ”›ğ”œâ„¨"
FRAKTUR_LIGHT_SMALL="ğ”ğ”Ÿğ” ğ”¡ğ”¢ğ”£ğ”¤ğ”¥ğ”¦ğ”§ğ”¨ğ”©ğ”ªğ”«ğ”¬ğ”­ğ”®ğ”¯ğ”°ğ”±ğ”²ğ”³ğ”´ğ”µğ”¶ğ”·"
FRAKTUR_BOLD_CAPITAL="ğ•¬ğ•­ğ•®ğ•¯ğ•°ğ•±ğ•²ğ•³ğ•´ğ•µğ•¶ğ•·ğ•¸ğ•¹ğ•ºğ•»ğ•¼ğ•½ğ•¾ğ•¿ğ–€ğ–ğ–‚ğ–ƒğ–„ğ–…"
FRAKTUR_BOLD_SMALL="ğ–†ğ–‡ğ–ˆğ–‰ğ–Šğ–‹ğ–Œğ–ğ–ğ–ğ–ğ–‘ğ–’ğ–“ğ–”ğ–•ğ––ğ–—ğ–˜ğ–™ğ–šğ–›ğ–œğ–ğ–ğ–Ÿ"

function fraktur_alphabet() {
	LIGHT=$1
	shift
	CAPITAL=$1
	shift
	
	printf FRAKTUR_%s_%s ${LIGHT} ${CAPITAL}
}

function fraktur_code() {
	printf '%d' "'$@'"
}

function fraktur() {
	WORD=$1
	shift
	if [ -z "${WORD}" ]; then
		WORD="Hello World"
	fi

	LIGHT=$1
	shift
	if [ -z "${LIGHT}" ]; then
		LIGHT="LIGHT"
	fi

	for i in $(seq 0 ${#WORD}); do 
		CAPITAL=""
		INDEX=0

		c=${WORD:i:1}

		if [ $(fraktur_code $c) -ge $(fraktur_code "a") ] && [ $(fraktur_code $c) -le $(fraktur_code "z") ]; then 
			INDEX=$(($(fraktur_code $c) - $(fraktur_code "a")))
			CAPITAL="SMALL"
		elif [ $(fraktur_code $c) -ge $(fraktur_code "A") ] && [ $(fraktur_code $c) -le $(fraktur_code "Z") ]; then
			INDEX=$(($(fraktur_code $c) - $(fraktur_code "A")))
			CAPITAL="CAPITAL"
		else
			echo -n "$c"
			continue
		fi
		
		ALPHA_FONT=($(fraktur_alphabet $LIGHT $CAPITAL))
		ALPHA=${!ALPHA_FONT}
		echo -n ${ALPHA:INDEX:1}
	done
}

