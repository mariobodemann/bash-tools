FRAKTUR_FONT_SCRIPT_DEFAULT="ð’œðµð’žð’Ÿð¸ð¹ð’¢ð»ð¼ð’¥ð’¦ð¿ð‘€ð’©ð’ªð’«ð’¬ð‘…ð’®ð’¯ð’°ð’±ð’²ð’³ð’´ð’µð’¶ð’·ð’¸ð’¹ð‘’ð’»ð‘”ð’½ð’¾ð’¿ð“€ð“ð“‚ð“ƒð‘œð“…ð“†ð“‡ð“ˆð“‰ð“Šð“‹ð“Œð“ð“Žð“"
FRAKTUR_FONT_SCRIPT_BOLD="ð“ð“‘ð“’ð““ð“”ð“•ð“–ð“—ð“˜ð“™ð“šð“›ð“œð“ð“žð“Ÿð“ ð“¡ð“¢ð“£ð“¤ð“¥ð“¦ð“§ð“¨ð“©ð“ªð“«ð“¬ð“­ð“®ð“¯ð“°ð“±ð“²ð“³ð“´ð“µð“¶ð“·ð“¸ð“¹ð“ºð“»ð“¼ð“½ð“¾ð“¿ð“Œð“ð“Žð“"
FRAKTUR_FONT_END="$(compgen -v)"

FRAKTUR_FONTS=$(echo $FRAKTUR_FONT_START $FRAKTUR_FONT_END | tr ' ' '\n' | sort | uniq -u)

function fraktur_alphabet() {
	local FONT=$1
	shift
	local STYLE=$1
	shift
	
	printf FRAKTUR_FONT_%s_%s ${FONT} ${STYLE}
}

function fraktur_list_fonts() {
	local FONT
	for FONT in ${FRAKTUR_FONTS}; do
		local ALPHA=${!FONT}

		printf "%s: %s\n" "$(echo $FONT | cut -d '_' -f3-4 | sed 's/_/ /g')" "${ALPHA:0:10}"
	done
}

function fraktur_code() {
	printf '%d' "'$@'"
}

function fraktur() {
	local WORD=$1
	shift
	if [ -z "${WORD}" ]; then
		WORD="Hello World"
	fi

	local FONT=$1
	shift
	if [ -z "${FONT}" ]; then
		FONT=FRAKTUR
	fi

	local STYLE=$1
	shift
	if [ -z "${STYLE}" ]; then
		STYLE="DEFAULT"
	fi
	
	local ALPHA_FONT=$(fraktur_alphabet $FONT $STYLE)
	local ALPHA=${!ALPHA_FONT}
	if [ -z "${ALPHA}" ]; then
		echo 'Font "'$FONT'" not found :( Please use "fraktur_list_fonts" for all available fonts.' > /dev/stderr
		return -1
	fi

	local i=0
	for i in $(seq 0 ${#WORD}); do 
		local INDEX=0

		local c=${WORD:i:1}

		if [ $(fraktur_code $c) -ge $(fraktur_code "a") ] && [ $(fraktur_code $c) -le $(fraktur_code "z") ]; then 
			INDEX=$((26 + $(fraktur_code $c) - $(fraktur_code "a")))
		elif [ $(fraktur_code $c) -ge $(fraktur_code "A") ] && [ $(fraktur_code $c) -le $(fraktur_code "Z") ]; then
			INDEX=$(($(fraktur_code $c) - $(fraktur_code "A")))
		else
			echo -n "$c"
			continue
		fi

		if [ ! -z "${FRAKTUR_DEBUG}" ]; then
			echo "Index: $INDEX"
			echo "Font: $ALPHA_FONT"
		        echo "Alpha: $ALPHA"
		fi	       
	
		echo -n ${ALPHA:INDEX:1}
	done
}

