def fraktur(message='abcdefg ABCDEFG', font='fraktur'):
	out=''
	if font in fonts:
		for c in message:
			if c.isalpha():
				if c.isupper():
					index = ord(c) - ord('A')
				else:
					index = ord(c) - ord('a') + 26
	
				out += fonts[font][index]
			else:
				out += c
	return out

def fraktur_all(message='abcdefg ABCDEFG'):
	for font in fonts.keys():
		print('%s: %s' % (font, fraktur(message,font)))

import sys

if len(sys.argv) == 2:
	print(fraktur(sys.argv[1]))
elif len(sys.argv) == 3:
	if sys.argv[2] == 'all':
		fraktur_all(sys.argv[1])
	else:
		print(fraktur(sys.argv[1], sys.argv[2]))
else:
	print("Usage: %s MESSAGE FONT\n\nMESSAGE: Some text\nFONT: one of %s.\n" % (sys.argv[0], str(fonts.keys())))


